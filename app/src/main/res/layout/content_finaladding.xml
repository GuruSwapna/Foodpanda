<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enchanterswapna.foodpanda.finaladding"
    tools:showIn="@layout/activity_finaladding">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Price"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/txtv10"
        android:layout_alignBottom="@+id/txtv10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:id="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.    "
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="70dp"
        android:layout_alignBaseline="@+id/txtv10"
        android:layout_alignBottom="@+id/txtv10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:id="@+id/txtv10"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:layout_below="@+id/typename"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginStart="107dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typename"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Quantity"
        android:id="@+id/textView7"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp" />
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:id="@+id/cardView2">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circlebutton"
            android:text="-"
            android:id="@+id/btnsub"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/txnumber"
            android:text="1"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circlebutton"
            android:text="+"
            android:id="@+id/btnadd"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView2"
            android:padding="10dp"
            android:text="Total"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView2"
            android:padding="10dp"
            android:text="Rs."
            android:layout_marginLeft="130dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvcost"
          android:textColor="#000"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginTop="10dp"
          android:layout_gravity="end"
          android:paddingTop="18dp"
          android:layout_marginLeft="0dp"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvcost1"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="18dp"
            android:layout_gravity="end"

            />
    </LinearLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/roundbtn"
        android:text="Add to Basket"
        android:textColor="#ffffff"
        android:id="@+id/addbas"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

</RelativeLayout>
