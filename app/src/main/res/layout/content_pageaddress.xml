<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enchanterswapna.foodpanda.Pageaddress"
    tools:showIn="@layout/app_bar_pageaddress">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/card1"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txcity"
            android:text="City"
            android:layout_marginLeft="15dp"
            />
            <TextView
                android:id="@+id/txname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="Chennai"
                android:textColor="#000"
                android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="31dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/rightarrow" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view1"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txcity1"
            android:text="Area"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/txname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:text="Vijaya Nagar (Velachery)"
            android:textColor="#000"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="31dp"
            android:layout_height="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/rightarrow" />

    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/maploc"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use My Current location"
        android:layout_gravity="center"
        android:textColor="#000"/>


</android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        android:id="@+id/txvaddr1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        android:id="@+id/txvaddr2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
       android:paddingLeft="10dp"
        android:visibility="invisible"
        android:id="@+id/txvaddr3"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        android:id="@+id/txvaddr4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        android:id="@+id/txvaddr5"
        />
</RelativeLayout>
