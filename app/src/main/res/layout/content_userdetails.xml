<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enchanterswapna.foodpanda.userdetails"
    tools:showIn="@layout/app_bar_userdetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account details"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/textInputLayout3">

        <EditText
            android:id="@+id/input_fname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:backgroundTint="#009977"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/inputlname12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#009977"
        android:hint="Last name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000"
        android:layout_below="@+id/textInputLayout3"
        android:layout_alignParentStart="true" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/inputlname12"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/input_email13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:backgroundTint="#009977"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:textSize="20sp"
            android:layout_marginTop="-35dp"
            android:id="@+id/edtxnumb"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/input_num4"
            android:layout_width="300dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:hint="Mobie"
            android:inputType="number"
            android:maxLength="10"
            android:paddingTop="22dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:backgroundTint="#009977"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:gravity="center"
        android:textColor="#009977"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/txpwd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:textColor="#009977"
        android:textSize="18sp"
        />
</RelativeLayout>
