<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enchanterswapna.foodpanda.Checkoutact"
    tools:showIn="@layout/activity_checkoutact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:textSize="18sp"
        android:paddingLeft="150sp"
        />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          android:textSize="18sp"
          android:textColor="#ffffff"
          android:text="Rs."
          android:paddingLeft="10dp"
          />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:id="@+id/tcst"
            android:paddingLeft="0dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Delivery Type"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/linearLayout2">
        <RadioGroup
            android:id="@+id/radiobtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rfpanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="foodpanda express\n in 45 min"
                android:textColor="#005599"
                android:textSize="17sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rfpick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Up \n Ready in 20 min" />

        </RadioGroup>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.   "
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:layout_alignBaseline="@+id/txpri"
        android:layout_alignBottom="@+id/txpri"
        android:layout_alignEnd="@+id/txpri"
        android:layout_marginEnd="13dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txpri"
        android:paddingLeft="10dp"
        android:text="29"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_marginStart="70dp"
        android:textColor="#000"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbtn"
        android:textColor="#ffffff"
        android:id="@+id/btndetails"
        android:text="Provide your Details       ->"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
